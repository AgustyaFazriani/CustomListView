<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android1:id="@+id/img_country_flag_list"
        android1:layout_width="90dp"
        android1:layout_height="55dp"
        android1:layout_marginEnd="8dp"
        android1:scaleType="fitCenter"
        tools:src="@android:color/darker_gray"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android1:layout_toEndOf="@+id/img_country_flag_list"
        android1:layout_centerVertical="true"
        android1:orientation="vertical"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content">

        <TextView
            android1:id="@+id/tv_country_name"
            android1:text="@string/country_name"
            android1:textColor="#000"
            android1:textSize="18sp"
            android1:textStyle="bold"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content" />

        <TextView
            android1:id="@+id/tv_country_detail"
            tools:text="Detail"
            android1:maxLines="2"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
